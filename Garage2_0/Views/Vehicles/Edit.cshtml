@model Garage2_0.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-1">
                <label asp-for="RegistrationNr" class="control-label"></label>
                <input readonly="readonly" asp-for="RegistrationNr" class="form-control" />
                <span asp-validation-for="RegistrationNr" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="TimeOfArrival" class="control-label"></label>
                <input readonly="readonly" asp-for="TimeOfArrival" class="form-control" />
                <span asp-validation-for="TimeOfArrival" class="text-danger"></span>
            </div>
            <partial name="_VehicleEditTablePartial" />
            <div class="form-group my-1">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Garage</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
