@model Garage2_0.Models.ReceiptViewModel

@{
    ViewData["Title"] = "Receipt";
}

<div class="alert alert-success">
    <strong>Success!</strong> The vehicle was successfully checked out!
</div>
    
<h1>Receipt</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(receipt => receipt.RegNr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(receipt => receipt.RegNr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(receipt => receipt.TimeOfArrival)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(receipt => receipt.TimeOfArrival)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(receipt => receipt.TimeOfDeparture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(receipt => receipt.TimeOfDeparture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(receipt => receipt.TotalTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(receipt => receipt.TotalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(receipt => receipt.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(receipt => receipt.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Garage</a>
</div>
